<main>
  <section>
    <div class="form">
      <h1 class="form__title">Створення товару</h1>
      <form method="POST" action="/product-create">
        <div class="form__content">
          <div class="form__field">
            <label for="info" class="form__label">Інформація про товар</label>
          </div>
          <div class="form__field">
            <label for="name" class="form__label">Назва товару</label>
            <input type="name" name="name" class="form__input">
          </div>
          <div class="form__field">
            <label for="price" class="form__label">Ціна</label>
            <input type="price" name="price" class="form__input">
          </div>
          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару</label>
            <input type="description" name="description" class="form__input">
          </div>
          <button class="form__button">Створити товар</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Список товарів</h1>
      <div class="product-list">
        {{#with data.products}}
        {{#if isEmpty}}
        <mark>Пустий</mark>
        {{else}}
        <ul>
          {{#with data.products.list}}
          <li>{{email}} | {{login}} | {{id}}<a href="/product-delete?id={{id}}">(видалити)</a></li>
          {{/with}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Оновити інформацію про товар</h1>
      <form method="POST" action="/product-update">
        <div class="form__content">
          <div class="form__field">
            <label for="id" class="form__label">ID</label>
            <input type="id" name="id" class="form__input">
          </div>

          <div class="form__field">
            <label for="info" class="form__label">Нова інформація про товар</label>
            <input type="info" name="info" class="form__input">
          </div>

          <div class="form__field">
            <label for="price" class="form__label">Ціна</label>
            <input type="price" name="price" class="form__input">
          </div>
          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару</label>
            <input type="description" name="description" class="form__input">
          </div>
          <button class="form__button">Відправити</button>
        </div>
      </form>
    </div>
  </section>

</main>



